<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="10dip"
    android:background="@color/wihte">
    
    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="22sp"
        android:visibility="gone"
        android:textColor="@android:color/background_dark"
        />
    <View android:id="@+id/dialog_sep_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/dialog_title"
        android:visibility="gone"
        android:background="@color/red_eb1684"/>
    
    <TextView android:id="@+id/dialog_tip"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_sep_line"
        android:layout_margin="20dip"
        android:textSize="18sp"
        android:gravity="center_horizontal"
     	android:visibility="gone"
        android:text="是否通关"
        android:textColor="@android:color/background_dark"/>
    
    <View android:id="@+id/dialog_sep_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:visibility="gone"
        android:background="@color/red_eb1684"
        android:layout_below="@id/dialog_tip"
        android:layout_marginBottom="20dip"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_sep_line2"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        
        <Button android:id="@+id/dialog_btn1"
        	style="@style/btn"
        	android:layout_width="match_parent"
        	android:layout_marginRight="10dip"
        	android:text="@string/button_confirm"
        	android:visibility="gone"
        	android:layout_weight="1"
        	/>
    
 	   <Button android:id="@+id/dialog_btn2"
    	    style="@style/btn"
        	android:layout_marginLeft="10dip"
        	android:layout_width="match_parent"
        	android:text="@string/button_cancle"
        	android:visibility="gone"
        	android:layout_weight="1"
        	/>
    </LinearLayout>
</RelativeLayout>